@model Instagram.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login page";
}

<div class="bg-dark text-center pt-5 pb-4 border-radius-1">
    <h3 class="text-white mb-5">Fill out the form to log into your account</h3>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div asp-validation-summary="ModelOnly" class="text-error"></div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <input type="text" class="form-control" asp-for="Identifier" placeholder="Enter your email or login...">
                <span asp-validation-for="Identifier" class="text-error" />
            </label>
        </div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password...">
                <span asp-validation-for="Password" class="text-error" />
            </label>
        </div>
        <div class="form_row mb-3">
            <label for="" class="col-4">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="flexCheckChecked" checked>
                  <label class="form-check-label text-white" for="flexCheckChecked">Remember me?</label>
            </label>
        </div>
        <button type="submit" class="btn btn-outline-light mb-3 w-25">Login</button>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}